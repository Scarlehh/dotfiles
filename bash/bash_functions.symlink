#!/bin/bash

function md {
    pandoc --latex-engine=xelatex $1.md -o $1.pdf
}

function mdwc {
	when-changed $1.md pandoc $1.md -o $1.pdf &
	evince $1.pdf
}

function comptex {
	xelatex $1.tex
	rm $1.out
	rm $1.toc
	rm $1.aux
	rm $1.nav
	rm $1.log
	rm $1.snm
}

function pdf {
	if [ ${1##*.} == "md" ]
	then
		echo "Compiling Markdown"
		md ${1%.*}
		evince ${1%.*}.pdf
	else
		evince $1
	fi
}
